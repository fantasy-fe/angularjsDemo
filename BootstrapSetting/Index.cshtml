            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <span class="navbar-brand">Opensharp Bootstrap Setting</span>
                <a class="navbar-brand" href="/BootstrapSetting/List" title="Opensharp Bootrstrap Setting">Back</a>
            </div>
        </nav>
    </div>
    <div class="protected">
        <div class="isViewLoading" ng-show="isViewLoading">
            <h1>It's gonna be magic... wait for it...</h1>
            <div class="loader">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
                <div class="bar4"></div>
                <div class="bar5"></div>
                <div class="bar6"></div>
                <div class="bar7"></div>
                <div class="bar8"></div>
            </div>
        </div>
    </div>

    <div ng-view></div>
    <div id="fb-root"></div>
    
</body>

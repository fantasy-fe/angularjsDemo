@using OpenSharp.Resources.Admin
@model OpenSharp.AppService.ViewModel.Commerce.BootstrapThemeViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="fragment" content="!">
    <meta name="description" content="Awesome features like contextual typeahead and colorpicker help you make your custom bootstrap 3 themes quickly and easily." />
    <link href="~/Scripts/magic/css/app.css" rel="stylesheet" />
    <style>
        [ng-cloak] {
            display: none;
        }
    </style>
    <script>
        window.operateType = '@ViewData["OperateType"]';
        window.themeId = '@ViewData["themeId"]';
    </script>
    <script src="~/Scripts/magic/lib/angular-1.0.0.js"></script>
    <script src="~/Scripts/magic/lib/script.js"></script>
    <script src="~/Scripts/magic/mainjs/ie/json3.min.js"></script>
    <script>


        var dev = false;
        var ext = (dev) ? '?now=' + new Date().getTime() : '';

        // load all of the dependencies asynchronously.
        $script([
            '/Scripts/magic/lib/less-1.7.1.min.js',
            '/Scripts/magic/lib/jquery-1.8.3.min.js'
        ], function () {
            $script([
                '/Scripts/magic/lib/bootstrap.js',
                '/Scripts/magic/lib/bootstrap-colorpicker.js'
            ], function () {
                $script([
                '/Scripts/magic/lib/angular.js',
                '/Scripts/magic/mainjs/app.js' + ext,
                '/Scripts/magic/mainjs/services.js' + ext,
                '/Scripts/magic/mainjs/controllers.js' + ext,
                '/Scripts/magic/mainjs/filters.js' + ext,
                '/Scripts/magic/mainjs/directives.js' + ext
                ], function () {
                    // when all is done, execute bootstrap angular application
                    angular.bootstrap(document, ['bootstrapVariablesEditor']);
                });
            });
        });


    </script>
    <title>Bootstrap Magic : Generate simply your own bootstrap 3 theme </title>
    <meta name="description" content="Awesome features like contextual typeahead and colorpicker to make smooth bootstrap 3 theme faster." />
    <link id="twitterBootstrapLess" rel="stylesheet/less" href="/Scripts/magic/less/bootstrap.less">

